<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_color"
        android:id="@+id/toolbar_main"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TableRow
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="?actionBarSize"
                    android:padding="@dimen/appbar_padding"
                    android:text="@string/app_name"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:id="@+id/profile"
                    android:background="@drawable/profile"></ImageButton>
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:id="@+id/wishlist"
                    android:background="@drawable/wish"></ImageButton>
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:id="@+id/cart"
                    android:background="@drawable/bag"></ImageButton>
            </TableRow>
        </TableLayout>
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/productImage"
        android:layout_marginBottom="20dp"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brand Name"
        android:id="@+id/brand_name"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:id="@+id/product_name"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFEA00"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$ 0.00"
        android:id="@+id/price"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#FF3D00"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Details"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="#252322"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details"
        android:text="Product Details"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:textColor="#7C7977"
        ></TextView>
    <TableLayout
        android:layout_width="match_parent"
            android:gravity="bottom"
        android:layout_height="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:gravity="bottom">
            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="WHISHLIST"
                android:id="@+id/whishlistBtn"
                android:background="#CCC3C0">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="ADD TO BAG"
                android:id="@+id/bagBtn"
                android:textColor="#ffffff"
                android:background="#387A3F">
            </Button>


        </TableRow>
    </TableLayout>

</LinearLayout>